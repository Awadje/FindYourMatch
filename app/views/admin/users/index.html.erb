<div class="container">
  <div class="row">
    <% flash.each do |key, value| %>
    <%= content_tag :div, value, class: "flash #{key}" %>
    <% end %>

    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3>Users</h3>
      </div>
      <div class="panel-body">
        <div class="container">
          <div class="row">
            <% @users.each do |user| %>
            <p><%= user.email %></p>
            <h4><% if user.admin? %>
              ADMIN
              <%end%></h4>
          </div>

          <div class="col-md-3 right">
            <%= form_for [:admin, user], method: :put do |f| %>
            <%= hidden_field_tag :admin, '' %>
            <%= f.check_box :admin %>
            <%= f.submit "Update" %>
            <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
