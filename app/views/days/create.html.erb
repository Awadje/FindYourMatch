<%= form_for Day.new do |f| %>
<h1>
  Students Array
</h1>
<p><%= matcher = User.pluck(:email).shuffle %></p>

<div class="form-group">
  <label>Event Day</label>
  <%= f.date_select :day %>

  <%= f.hidden_field :matching, :value => [matcher.first, matcher.last] %>
  <%= f.submit "Save", class: "btn btn-primary" %>
  <% end %>

</div>
